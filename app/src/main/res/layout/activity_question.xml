<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/bro"
    tools:context=".QuestionActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="SMART_BANNER"
        android:layout_gravity="bottom"
        app:adUnitId="@string/bannerID"
        >
    </com.google.android.gms.ads.AdView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:id="@+id/scoreBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1/10"
        android:layout_marginTop="10dp"
        android:textColor="#269BFF"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:textSize="30sp"
        android:fontFamily="@font/amaranth_bold"/>


    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/amaranth_bold"
        android:gravity="center_horizontal"
        android:text="What is the Capital of Bangladesh?"
        android:textColor="#E6FAFF"
        android:textSize="25sp"
        android:textStyle="bold" />
<LinearLayout
    android:id="@+id/linearLayout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

    <Button
        android:id="@+id/option1"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back100"
        android:fontFamily="@font/fav1"
        android:text="Dhaka"
        android:textColor="#ffffff"
        android:textSize="22sp"
         />

    <Button
        android:id="@+id/option2"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back100"
        android:fontFamily="@font/fav1"
        android:text="Rome"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/option3"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:text="Delhi"
        android:fontFamily="@font/fav1"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/back100"/>
    <Button
        android:id="@+id/option4"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:text="Islamabad"
        android:fontFamily="@font/fav1"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/back100"/>
</LinearLayout>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="150dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:alpha="0.55"
                android:background="@drawable/nextbutton"
                android:enabled="false"
                android:fontFamily="@font/amaranth_bold"
                android:gravity="center"
                android:text="Next"
                android:textColor="#ffffff"
                android:textSize="28sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>